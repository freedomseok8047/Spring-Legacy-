<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- 뷰의 공통된 상위 폴더 경로 및 확장자를 분리해서, 뷰이름으로만 사용할 수 있는 기능  -->
	<bean id="viewResolver"   
       class="org.springframework.web.servlet.view.InternalResourceViewResolver">
      <property name="viewClass" 
                          value="org.springframework.web.servlet.view.JstlView"/>
      <property name="prefix" value="/WEB-INF/views/member_ljs230912/" /> 
      <property name="suffix" value=".jsp"/>
   </bean>
   <!-- 동네 1번 , 클라이언트로 부터 동작 명력을 받아서 처리하는 곳,
   실제 작업은 본인이 안하고, 다 외주르 줍니다. 분업화 하느 것, 느슨한 결함을 함.  -->
   <bean id="memberController" 
                            class="com.spring.member.controller.MemberControllerImpl">
      <property name="methodNameResolver">
         <ref local="memberMethodResolver"/>
      </property>
      <property name="memberService" ref="memberService"/>
   </bean>
	<!-- 모델 2에서의 action, 어떤 동작의 여부르 키를 설정해서, 컨트롤러의 매서드에 직접 이름으로 연결하는 도구 --> 
   <bean  id="memberMethodResolver"
   class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver" >
      <property  name="mappings" >
        <props>
          <prop key="/member_ljs230912/listMembers.do" >listMembers</prop>
          <prop key="/member_ljs230912/addMember.do" >addMember</prop>
          <prop key="/member_ljs230912/removeMember.do">removeMember</prop>
          <prop key="/member_ljs230912/modMember.do">modMember</prop>
          <prop key="/member_ljs230912/updateMember.do">updateMember</prop>
          <prop key="/member_ljs230912/memberForm.do" >form</prop>
       </props>
      </property>
   </bean>
   
   <!-- /member_ljs230912/*.do 확장자, 액션과 비슷한 구조  -->
   <bean id="memberUrlMapping"
       class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
      <property name="mappings">
         <props>
            <prop key="/member_ljs230912/*.do">memberController</prop>
         </props>
      </property>
   </bean>
   
</beans>
